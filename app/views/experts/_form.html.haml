= form_for @expert do |f|
  - if @expert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expert.errors.count, "error")} prohibited this expert from being saved:"
      %ul
        - @expert.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :contact_no
    = f.text_field :contact_no
  .actions
    = f.submit 'Save'
