= form_for @registered_number do |f|
  - if @registered_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@registered_number.errors.count, "error")} prohibited this registered_number from being saved:"
      %ul
        - @registered_number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'
